{
  "manifest_version": 3,
  "name": "Kayako QoL Enhancer",
  "version": "1.5.0",
  "description": "Extra controls to enhance Kayako Agent, including resizing editors, hiding ticket elements, and staying logged in across brands.",
  "permissions": ["cookies", "scripting", "activeTab", "storage", "tabs"],
  "optional_host_permissions": ["<all_urls>"],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.bundled.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.kayako.com/agent/*"],
      "js": ["content.js"]
    }
  ]
}